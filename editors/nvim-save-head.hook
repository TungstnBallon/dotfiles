[Trigger]
Operation=Upgrade
Type=Package
Target=neovim-git

[Action]
Description=Save current nvim HEAD
When=PreTransaction
Depends=git
Depends=sh
Depends=coreutils
Exec=/bin/sh -c 'pacman -Q neovim-git | cut -d " " -f 2 | cut -d "." -f 5 | cut -d "-" -f 1 | cut -c2- | tr -d "\n" > /tmp/NVIM_COMMIT'

