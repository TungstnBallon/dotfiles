# use aliases in sudo
alias sudo='sudo '

# shorter pacman alias
alias pac='pacman'
# funny command to remove packages
alias yeet='pacman -Rns'
# remove orhans
alias yeeorph='yeet $(pacman -Qtdq)'


# better pacdiff
alias pacdiff='DIFFPROG="nvim -d" pacdiff -b -3 -s'

# open file in editor
alias te='$EDITOR'
# open all files with changes in a git repository
alias diffed='$EDITOR $(git diff --name-only --relative)'

alias vim="nvim --noplugin"
